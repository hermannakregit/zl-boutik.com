{% extends "site/base.html.twig" %}

{% block title %}Z&L Boutik | Contactez-nous{% endblock %}

{% block body %}

    <!-- Map Begin -->
    <div class="w-100">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3972.0352527060104!2d-3.9907984060311694!3d5.411602024089044!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfc19362c8990c41%3A0xabcb75167017c4fa!2sPHARMACIE%20FANDASSO!5e0!3m2!1sfr!2sci!4v1669812844780!5m2!1sfr!2sci" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <!-- Map End -->

    <!-- Contact Section Begin -->
    <section class="my-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__text">
                        <div class="section-title">
                            <div class="alert alert-info">
                                <p class="icontext"><i class="icon text-info fa fa-phone"></i> Informations</p>
                            </div>
                            <h2>Nous Contacter</h2>
                            <p>Laissez nous un message, nous vous répondrons dès que possible.</p>
                            <div class="jumbotron bg-dark text-white">
                                <ul>
                                    <li>
                                        <h4>Côte d'Ivoire</h4>
                                        <p>Abidjan  Côte d'Ivoire, Cocody-Angré-Château. <br />(+225) 07 070 732 77</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="">
                        <form action="#">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="text" class="form-control mt-3" placeholder="Nom & Prénom">
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control mt-3" placeholder="Email">
                                </div>
                                <div class="col-lg-12">
                                    <textarea placeholder="Message" class="form-control mt-3"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mt-3 d-block w-100">Envoyer mon message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->

{% endblock body %}