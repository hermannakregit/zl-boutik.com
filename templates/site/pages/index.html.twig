{% extends 'site/base.html.twig' %}

{% block title %}Z&L Boutik | Acceuil{% endblock %}

{% block body %}

    <section class="section-intro padding-y">
        <div class="container">
        <!-- ==============  COMPONENT SLIDER  BOOTSTRAP ============  -->
        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
            <li data-target="#carousel1_indicator" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="site/images/banners/slide-lg-1.png" alt="First slide"> 
            </div>
            <div class="carousel-item">
            <img src="site/images/banners/slide-lg-2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
            <img src="site/images/banners/slide-lg-3.png" alt="First slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div> 
        <!-- ============ COMPONENT SLIDER BOOTSTRAP end.// ===========  .// -->	
            
        </div> <!-- container end.// -->
    </section>

    <section>
        <div class="row">
            <div class="w-100 mx-auto mt-3">
                {% for message in app.flashes('success')  %}
                    <div class="alert alert-success" role="alert">
                        <div class="d-flex justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon alert-icon mr-1 mt-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l5 5l10 -10" /></svg>   
                            <div>
                                <h4 class="alert-title">Félicitation !</h4>
                                <div class="text-muted">{{ message }}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <div class="container">
            
        <!-- =============== SECTION 2 =============== -->
        <section class="padding-bottom">
        
        <header class="section-heading mb-4">
            <h3 class="title-section">Nos meilleurs produits</h3>
        </header>
        
        <div class="row row-sm list">
            {% for p in products  %}
                {% include "site/partials/produitItem.html.twig" with {p: p} %}
            {% endfor %} <!-- col.// -->
        </div> <!-- row.// -->
        </section>
        <!-- =============== SECTION 2 END =============== -->
        
        
        <!-- =============== SECTION BANNER =============== -->
        <section class="padding-bottom">
            <article class="box d-flex flex-wrap align-items-center p-5 bg-dark">
                <div class="text-white mr-auto">
                    <h3>Nos meilleurs produits, </h3>
                    <p> Les produits les plus apréciés sont disponibles </p>
                </div>
                <div class="mt-3 mt-md-0"><a href="{{ path('app_site_produit') }}" class="btn btn-outline-light">voir plus</a></div>
            </article>
        </section>
        <!-- =============== SECTION BANNER .//END =============== -->

        <section class="padding-bottom mt-5">

            <header class="section-heading text-center mb-3">
                <h3 class="title-section"><u>Ce que disent nos clients</u></h3>
            </header>
            
    
            <div class="owl-carousel">
    
              {% for c in comments %}
                <div class="alert alert-info text-dark mb-4">
                    <div class="card-body" style="height: 10rem;">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                        <img src="https://via.placeholder.com/150" alt="avatar" width="25" height="25" class="rounded-pill" />
                        <p class="small mb-0 ms-2 ml-2"><i>{{ c.writer|upper }}</i></p>
                        </div>
                    </div>
                    <p class="mt-2"> <i> {{ c.comment[0:120] }}... </i> </p>
                    </div>
                </div>
              {% endfor %}
    
            </div>
        </section>
        
    </div>  
    <!-- container end.// -->


{% endblock %}

{% block scripts %}
    <script>
        const productList = new List('product-list', { 
            valueNames: ['product_name']
        });
    </script>
    <script>
        $(document).ready(function(){
            $(".owl-carousel").owlCarousel({
                center: false,
                items:1,
                loop:true,
                margin:30,
                responsive:{
                    600:{
                        items:4
                    }
                },
                autoplay:true,
                autoplayTimeout:3500,
                autoplayHoverPause:true
            });
        });
    </script>
{% endblock scripts %}
