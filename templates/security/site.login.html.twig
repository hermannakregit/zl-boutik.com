{% extends 'site/base.html.twig' %}

{% block title %}Z&L Boutik | Connexion{% endblock %}

{% block body %}
    <div class="row">

        {% if app.user %}
            <div class="col-md-6 mx-auto p-3 mt-4 text-center">
                <div class="mb-3 text-center">
                    Vous êtes déjà connecté.  <!-- {{ app.user.userIdentifier }} -->
                </div>
                <a class="primary-btn" href="{{ path('app_site_index') }}">Continuer vers la boutique.</a>
            </div>
        {% else %}

            <div class="col-md-6 mx-auto p-3">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
            
                    <h1 class="h3 mb-3 font-weight-normal">Connectz-vous</h1>
                    
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
            
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
            
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
                    
                    #}
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    
            
                    <button class="btn btn-primary w-100 mt-4" type="submit">
                        Connexion
                    </button>
                </form>
            </div>
            
        {% endif %}

    </div>
{% endblock %}
